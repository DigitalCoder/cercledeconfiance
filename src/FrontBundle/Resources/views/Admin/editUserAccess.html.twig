    <div class="container-fluid text-center editUserBlock">

        <div class="col-md-10 col-md-offset-1 col-xs-12 text-center">
            <h2>Gérer les droits d'accès</h2>
        </div>

        <div class="formEditUser center-block">
            {{ form_start(form) }}
            {% for widget in form.children %}
                {{ form_row(widget) }}
                <br />
            {% endfor %}
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}