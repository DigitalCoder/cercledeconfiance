{% extends 'AppBundle::layoutAppli.html.twig' %}

{% block content %}
    <a href="{{ path('appli',{ 'token': token }) }}" class="btn btn-default padder"><i class="fa fa-arrow-left"></i></a>

    <div class="container-fluid marginBottom marginTop text-center">
        <div class="row text-center navAppli section-header">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                <h2 class="section-title">Contactez les autres membres du cercle</h2>
            </div>
            <div class="col-md-2 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-8 col-xs-offset-2 visioMembers">
                <h4>Qui appeler ?</h4>
                <ul class="list-group listUser">
                    {% for CUser in CUsers %}
                        <div class="col-md-12 col-sm-4 col-xs-12 stopPaddLink marginLinkMembers">
                            <li class="list-group-item backVisioMembers">
                                <img src="{{ asset("uploads/" ~ CUser.user.avatar) }}" class="img-circle miniAvatar">
                                {{ CUser.user.firstname }}
                                <a href="#"> <i class="fa fa-video-camera"></i> </a>
                                <a href="#"> <i class="fa fa-phone"></i> </a>
                            </li>
                        </div>
                    {% endfor %}
                </ul>
            </div>
            <div class="blockVisio col-md-7 col-md-offset-1 col-xs-10 col-xs-offset-1">
                <video controls id="receive"></video>
                <video controls width="30%" id="send"></video>
                <div class="row">
                    <div class="col-xs-5 col-xs-offset-1">
                        <textarea id="offer" class="form-control"></textarea>
                        <button id="start">Appeler</button>
                        <button id="init">DÃ©crocher</button>
                    </div>
                    <div class="col-xs-5">
                        <form id="incoming">
                            <textarea class="form-control"></textarea>
                            <button type="submit">Accepter l'offre</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">

        </div>
    </div>
    </div>


{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('assets/js/adapter.js') }}"></script>
    <script src="{{ asset('assets/js/simplepeer-min.js') }}"></script>
    <script src="{{ asset('assets/js/visio.js') }}"></script>
{% endblock %}
