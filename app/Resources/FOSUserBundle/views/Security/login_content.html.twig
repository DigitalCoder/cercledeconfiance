{% trans_default_domain 'FOSUserBundle' %}

<div class="container text-center marginTop marginBottom">
    <h2>Se connecter</h2>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="marginBottom">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}
        <div class="form-group">
            <label for="username">{{ 'Nom d\'utilisateur : '|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
        </div>
        <div class="form-group">
            <label for="password">{{ 'Mot de Passe : '|trans }}</label>
            <input type="password" id="password" name="_password" required="required"/>
        </div>
        <div class="form-group">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
        </div>
        <input type="submit" id="_submit" name="_submit" value="{{ 'Entrer !'|trans }}"/>
    </form>
    <h3><a href="/register">Pas encore inscrit ! C'est ici !</a></h3>
</div>