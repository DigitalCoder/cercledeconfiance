{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

<a href="{{ path('accueil')}}" class="btn btn-default padder"><i
            class="fa fa-arrow-left"></i></a>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 offerform section-header">
            <h2 class="section-title text-center">Modifiez votre profil</h2>
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    {{ form_widget(form) }}
            <div class="form-group">
                <input class="btn btn-default btn-lg form-control" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
            </div>
    {{ form_end(form) }}
        </div>
    </div>
</div>

