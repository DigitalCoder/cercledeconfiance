{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 offerform">
            <h3 class="section-header section-title text-center">Modifiez votre profil</h3>
    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    {{ form_widget(form) }}
            <div class="form-group">
                <input class="btn btn-info btn-lg form-control" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
            </div>
    {{ form_end(form) }}
        </div>
    </div>
</div>

